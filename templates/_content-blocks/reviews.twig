{% import "_macros/utils.twig" as utils %}

{% if globalContent.reviewsEmbedCode|trim|length %}
  <section class="reviews content-block
    {{ utils.backgroundColour(globalContent.reviewsBackgroundColour.class) }}"
    {{ utils.debugAttributes(entry, 'reviews', 'Reviews') }}
    {{ utils.jumpLink(block.id) }}
    >
    <div class="content-block-inner container-narrow">
      <div class="w-full">
        {{ globalContent.reviewsEmbedCode|raw }}
      </div>
    </div>
  </section>
{% endif %}
