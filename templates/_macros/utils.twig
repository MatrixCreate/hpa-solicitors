{% macro debugAttributes(entry, templateName, title) %}
  {%- if craft.app.user.getIsAdmin() and adminSettings.showDebugInfo -%}
    data-title="{{ title }}" data-template="{{ templateName }}"
  {%- endif -%}
{% endmacro %}

{% macro jumpLink(id) %}
  {%- if id -%}
    id="blockIdAnchor-{{ id }}"
  {%- endif -%}
{% endmacro %}

